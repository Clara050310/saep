<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Cadastro de Produtos - SAEP</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body {
      font-family: "Poppins", sans-serif;
      background: #fff;
      color: #333;
      margin: 0;
      padding: 0;
    }

    header {
      background-color: #c93434;
      color: white;
      padding: 15px;
      text-align: center;
    }

    header h1 {
      margin: 0;
    }

    nav {
      margin-top: 10px;
    }

    nav a {
      color: white;
      text-decoration: none;
      margin: 0 10px;
    }

    nav a:hover {
      text-decoration: underline;
      color: #a82d2d;
    }

    main {
      padding: 40px 20px;
      max-width: 900px;
      margin: 0 auto;
    }

    .form-card {
      background: #fff;
      padding: 30px;
      border-radius: 20px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      border: 2px solid #c93434;
      margin-bottom: 30px;
    }

    .form-card input, .form-card button {
      display: block;
      width: 100%;
      padding: 10px;
      margin: 8px 0;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 1em;
    }

    .form-card button {
      background: #c93434;
      color: white;
      border: none;
      cursor: pointer;
      transition: 0.3s;
    }

    .form-card button:hover {
      background: #a82d2d;
    }

    .back-button {
      background: #555; /* cinza escuro */
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 12px;
      cursor: pointer;
      margin-bottom: 20px;
      text-decoration: none;
      display: inline-block;
      transition: 0.3s;
    }

    .back-button:hover {
      background: #333;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: center;
    }

    th {
      background-color: #c93434;
      color: white;
    }

    .delete {
      background: #c93434;
      color: white;
      border: none;
      padding: 6px 12px;
      border-radius: 8px;
      cursor: pointer;
      transition: 0.3s;
    }

    .delete:hover {
      background: #a82d2d;
    }
  </style>
</head>
<body>
  <header>
    <h1>Cadastro de Produtos</h1>
    <nav>
      <a href="/principal">Início</a>
      <a href="/gestao_estoque">Gestão de Estoque</a>
      <a href="/logout">Sair</a>
    </nav>
  </header>

  <main>
    <a href="/principal" class="back-button">Voltar</a>

    <form method="POST" action="/cadastro_produto" class="form-card">
      <input type="text" name="nome" placeholder="Nome do produto" required>
      <input type="text" name="descricao" placeholder="Descrição">
      <input type="text" name="material" placeholder="Material">
      <input type="number" step="0.01" name="peso" placeholder="Peso (kg)">
      <input type="text" name="tamanho" placeholder="Tamanho">
      <input type="number" name="estoque_minimo" placeholder="Estoque mínimo">
      <button type="submit">Cadastrar</button>
    </form>

    <h2>Produtos Cadastrados</h2>
    <table>
      <tr>
        <th>Nome</th><th>Descrição</th><th>Material</th><th>Peso</th><th>Tamanho</th><th>Ações</th>
      </tr>
      <% produtos.forEach(p => { %>
        <tr>
          <td><%= p.nome %></td>
          <td><%= p.descricao %></td>
          <td><%= p.material %></td>
          <td><%= p.peso %></td>
          <td><%= p.tamanho %></td>
          <td>
            <form method="POST" action="/excluir_produto/<%= p.id_produto %>">
              <button type="submit" class="delete">Excluir</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </table>
  </main>
</body>
</html>
